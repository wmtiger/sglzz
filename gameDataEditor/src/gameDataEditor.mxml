					   xmlns:hero="editor.hero.*"
					   xmlns:skill="editor.skill.*"
					   xmlns:herosoul="editor.herosoul.*"
					   xmlns:item="editor.item.*"
					   xmlns:equip="editor.equip.*"
					   width="960" height="720"
					   creationComplete="windowedapplication1_creationCompleteHandler(event)"
					   closing="windowedapplication1_closingHandler(event)"
					   fontFamily="微软雅黑" fontSize="15">
	<fx:Style source="gameDataEditor.css"/>
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			/////////////////////// 以下变量区
			
